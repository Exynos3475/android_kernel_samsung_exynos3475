config EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS_DECON_EXYNOS3475 && EXYNOS_MIPI_DSI
	bool "Select LCD panel driver"

config PANEL_AID_DIMMING
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support AID Dimming"
	default n

config EXYNOS_DECON_MDNIE_LITE
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support MDNIE LITE"
	default n

config EXYNOS_DECON_LCD_SYSFS
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support LCD SYSFS"

config EXYNOS3475_DECON_DISP_LCD_NAME
	string
	default "sc7798d" if EXYNOS3475_DECON_LCD_SC7798D
	default "s6e88a0" if EXYNOS3475_DECON_LCD_S6E88A0
	default "ea8061s" if EXYNOS3475_DECON_LCD_EA8061S_J1
	default "s6d7aa0" if EXYNOS3475_DECON_LCD_S6D7AA0
	default "s6e8aa5" if EXYNOS3475_DECON_LCD_S6E8AA5X01
	default "ili9881c" if EXYNOS3475_DECON_LCD_ILI9881C
	default "sc7798d" if EXYNOS3475_DECON_LCD_SC7798D_XCOVER3
	help
	  This string is compared with lcd name fron Device Tree.

choice
	prompt "Select Panel"
	depends on EXYNOS3475_DECON_DISP_LCD
	help
		select the display panel.

config EXYNOS3475_DECON_LCD_SC7798D
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "SC7798D TFT WVGA LCD driver(480 x 800)"

config EXYNOS3475_DECON_LCD_SC7798D_XCOVER3
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "SC7798D TFT WVGA LCD driver(480 x 800)"

config EXYNOS3475_DECON_LCD_S6D7AA0
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	tristate "S6D7AA0 TFT WXGA LCD driver(800 x 1280)"

config EXYNOS3475_DECON_LCD_SC7798D_J2
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "SC7798D TFT WVGA LCD driver(480 x 800)"

config EXYNOS3475_DECON_LCD_S6E88A0
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "S6E88A0 AMOLE qHD LCD driver(540 x 960)"

config EXYNOS3475_DECON_LCD_S6E8AA5X01
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "S6E8AA5X01 AMOLE HD LCD driver(720 x 1280)"

config EXYNOS3475_DECON_LCD_EA8061S_J1
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "EA8061S AMOLED WVGA LCD driver(480 x 800)"

config EXYNOS3475_DECON_LCD_ILI9881C
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "S6E88A0 TFT HD LCD driver(720 x 1280)"

endchoice
