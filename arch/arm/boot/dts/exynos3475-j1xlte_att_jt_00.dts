/dts-v1/;
#include "exynos3475-j1x_common.dtsi"
#include "modem-ss308ap-pdata.dtsi"
#include "exynos3475-j1xlte_att_battery.dtsi"
#include "exynos3475-j1xlte_att_jt_gpio_00.dtsi"

/ {
	model = "Samsung UNIVERSAL3475 board based on EXYNOS3475";
	model_info-chip = <3475>;
	model_info-platform = "android";
	model_info-subtype = "samsung";
	model_info-hw_rev = <0>;
	model_info-hw_rev_end = <1>;
	compatible = "samsung,UNIVERSAL3475", "samsung,exynos3475";

	hsi2c@13870000 {
		status = "okay";
		s2mu005@3d {
			compatible = "samsung,s2mu005mfd";
			reg = <0x3d>;
			pinctrl-names = "default";
			pinctrl-0 = <&if_pmic_irq>;
			s2mu005,irq-gpio = <&gpa0 2 0>;
			s2mu005,wakeup;

			leds {
				flash-gpio = <&gpd2 3 0>;
				torch-gpio = <&gpd0 7 0>;

				flash_current = <1000>;
				preflash_current = <175>;
				movie_current = <175>;
				torch_current = <75>;
				factory_current = <250>;

				status = "okay";
				s2mu005-leds1 {
					ledname = "leds-sec1";
					id = <0>;
					timeout = <15>;
				};

				s2mu005-leds2 {
					ledname = "leds-sec2";
					id = <1>;
					timeout = <15>;
				};
			};

			muic {
				status = "okay";
				muic,uart_addr = "139c0000.pinctrl";
				muic,uart_rxd = "gpb1-0";
				muic,uart_txd = "gpb1-1";
			};
		};
	};

	hsi2c@104C0000 {
		s2mpu04_pmic@66 {
			regulators {
				ldo23_reg: LDO23 {
					regulator-name = "vdd_ldo23";
					regulator-min-microvolt = <1800000>;
					regulator-max-microvolt = <1800000>;
					regulator-always-on;
					regulator-initial-mode = <3>;
				};
			};
		};
	};

	bluetooth {
		compatible = "broadcom,bcm43xx";
		gpios = <&gpd2 0 1	/*BT_EN*/
				&gpd2 1 1	/*BT_WAKE*/
				&gpa1 6 0xF	/*BT_HOST_WAKE*/ >;
		pinctrl-names = "default";
		pinctrl-0=<&bt_hostwake &bt_btwake &bt_reg_on>;
		status = "okay";
	};
	
	i2c@13830000 {
		status = "okay";
		samsung,i2c-max-bus-freq = <300000>;
		sec-nfc@27 {
			compatible = "sec-nfc";
			reg = <0x27>;
			interrupts = <1 0 0>;
			interrupt-parent = <&gpa1>;
			sec-nfc,firm-gpio = <&gpd1 3 0>;
			sec-nfc,irq-gpio = <&gpa1 1 0>;
			clkctrl-reg = <0x10466008>;
			sec-nfc,nfc_clkreq = <&gpc2 3 0x2>;
			sec-nfc,nfc_pd = <&gpc2 2 0x2>;
			sec-nfc,i2c_1p8 = "vdd_ldo23";
			pinctrl-names = "default","sleep";
			pinctrl-0 = <&nfc_n5_en &nfc_n5_clk_req &nfc_clk &nfc_n5_firm>;
			pinctrl-1 = <&nfc_n5_en>;
		};
	};
	
	pinctrl@139B0000 {
		acc_int: acc_int {
			samsung,pins = "gpa1-0";
			samsung,pins-function = <0x0>;
			samsung,pin-pud = <0>;
			samsung,pin-drv = <0>;
		};
		prox_int: prox_int {
			samsung,pins = "gpa1-7";
			samsung,pins-function = <0x0>;
			samsung,pin-pud = <3>;
			samsung,pin-drv = <0>;
		};
	};

	i2c@13850000 {
		samsung,i2c-sda-delay = <100>;
		samsung,i2c-max-bus-freq = <400000>;
		status = "okay";

		accelerometer@18 {
			compatible = "bma2x2";
			reg = <0x18>;
			interrupt-parent = <&gpa1>;
			interrupts = <0 0 0>;
			bma2x2,gpio_int1 = <&gpa1 0 0>;
			bma2x2,accel_place = <6>;
		};

		cm36672p@60 {
			compatible = "cm36672p";
			reg = <0x60>;
			pinctrl-names = "default";
			pinctrl-0 = <&prox_int>;
			interrupt-parent = <&gpa1>;
			interrupts = <7 0 0>;
			cm36672p,vdd-supply = <&ldo25_reg>;
			cm36672p,vdd_always_on = <0>;
			cm36672p,vled_ldo = <&gpd0 6 0x1>;
			cm36672p,irq_gpio = <&gpa1 7 0>;
			cm36672p,default_hi_thd = <19>;
			cm36672p,default_low_thd = <14>;
			cm36672p,cancel_hi_thd = <10>;
			cm36672p,cancel_low_thd = <7>;
			cm36672p,ps_duty = <2>;
			cm36672p,ps_it = <0>;
			cm36672p,led_current = <1>;
			cm36672p,default_trim = <0>;
		};
	};

	hsi2c_7: hsi2c@138A0000 {
		fimc-is-sensor-4ec@56 {
			gpio_standby = <&gpf0 2 0x1>; /* MAIN_CAM_STBY */
		};

		sr200_soc@20 {
			gpio_standby = <&gpf0 3 0x1>; /* VT_CAM_STBY */
		};
	};
};
